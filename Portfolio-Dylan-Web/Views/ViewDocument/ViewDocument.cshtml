@{
    ViewBag.Title = "Document Preview";
    var file = ViewBag.Filename;
}
<div class="cv-preview container">
    <div id="viewer" style="width:100%; height:600px;"></div>
    <div class="mt-3">
        <a asp-action="Download" asp-route-filename="@file"
           class="btn btn-outline-primary btn-sm">Download Document</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/webviewer/webviewer.min.js"></script>
    <script>
        WebViewer({
          path: '/lib/webviewer/lib',
          licenseKey: '7oPa145wZSawEHisDz0q',
          initialDoc: `/files/${encodeURIComponent('@file')}`
        }, document.getElementById('viewer'))
        .then(instance => {
          instance.UI.setTheme('dark');
        });
    </script>
}
