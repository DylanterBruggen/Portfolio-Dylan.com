@using System.Globalization
@using Microsoft.Extensions.Localization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio Dylan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_Dylan_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm border-bottom mb-3">
                <div class="container">
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        Portfolio Dylan
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 gap-3">
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-controller="AboutMe" asp-action="AboutMe">About Me</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="XP" asp-action="Experience">Experience</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-controller="XP" asp-action="Projects">Projects</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="align-content-end">
                    @await Html.PartialAsync("_CulturePartial")
                </div>
                @*
                <partial name="_LoginPartial" />
                *@
            </nav>
        </header>


        <main role="main" class="flex-grow-1">
            <div class="container pb-3">
                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @RenderBody()
            </div>
        </main>

        <footer class="bg-white border-top shadow-sm mt-auto py-4">
            <div class="container">
                <div class="row text-center text-md-start">
                    <!-- Column 1: Contact me -->
                    <div class="col-md-4 mb-3">
                        <h6>Contact me:</h6>
                        <a href="mailto:Portfolio.Dylan@outlook.com">
                            Portfolio.Dylan@outlook.com
                        </a>
                    </div>

                    <!-- Column 2: Page Links -->
                    <div class="col-md-4 mb-3">
                        <ul class="list-unstyled">
                            <li><a class="text-primary text-decoration-none d-block" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a class="text-success text-decoration-none d-block" asp-controller="AboutMe" asp-action="AboutMe">About Me</a></li>
                            <li><a class="text-danger text-decoration-none d-block" asp-controller="XP" asp-action="Experience">Experience</a></li>
                            <li><a class="text-info text-decoration-none d-block" asp-controller="XP" asp-action="Projects">Projects</a></li>
                            <li><a class="text-warning text-decoration-none d-block" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        </ul>
                    </div>

                    <!-- Column 3: Copyright -->
                    <div class="col-md-4 text-md-end">
                        <small class="text-muted">
                            © 2025 Dylan ter Bruggen. All rights reserved.<br />
                            This code is for personal portfolio use only and may not be copied, reused, or redistributed without permission.
                        </small>
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
