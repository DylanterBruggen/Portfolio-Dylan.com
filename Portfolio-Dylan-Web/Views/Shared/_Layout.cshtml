<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio Dylan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_Dylan_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Portfolio Dylan</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="AboutMe" asp-action="AboutMe">About me</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="XP" asp-action="Experience">Experience</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="XP" asp-action="Projects">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Extra_Projects" asp-action="Extra">Extra Projects</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="flex-grow-1">
            <div class="container pb-3">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @RenderBody()
            </div>
        </main>

        <footer class="border-top footer text-muted mt-auto py-3">
            <div class="container text-center footerContent">
                <ul class="list-unstyled">
                    <li><a class="nav-link d-inline text-dark" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li><a class="nav-link d-inline text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
                <small>
                    © 2025 Dylan ter Bruggen. All rights reserved.<br />
                    This code is for personal portfolio use only and may not be copied, reused, or redistributed without permission.
                </small>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
