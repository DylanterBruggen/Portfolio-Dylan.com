@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = "Home Page";
}

<div class="experience-section container">
    <h1 class="text-center">Portfolio: Dylan ter Bruggen</h1>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h4 class="text-center">@Localizer["WelcomeMessage"]</h4>

            <div id="carouselOverMijENG" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/OverMij/Dylan_1.png.jpg" class="d-block w-100" alt="Dylan 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_2.png.jpg" class="d-block w-100" alt="Dylan 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_3.png.jpg" class="d-block w-100" alt="Dylan 3">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_4.png.jpg" class="d-block w-100" alt="Dylan 4">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_5.png.jpg" class="d-block w-100" alt="Dylan 5">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_6.png.jpg" class="d-block w-100" alt="Dylan 6">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_7.png.jpg" class="d-block w-100" alt="Dylan 7">
                    </div>
                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselOverMijENG" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselOverMijENG" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden"></span>
                </button>
            </div>
            <br />
        </div>
    </div>
</div>