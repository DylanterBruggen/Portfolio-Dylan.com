@{
    ViewData["Title"] = "Over mij";
}

<div class="experience-section container ">
    <h1 class="text-center">About Me</h1>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div id="carouselOverMij" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/OverMij/Dylan_1.png.jpg" class="d-block w-100" alt="Dylan 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_2.png.jpg" class="d-block w-100" alt="Dylan 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_3.png.jpg" class="d-block w-100" alt="Dylan 3">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_4.png.jpg" class="d-block w-100" alt="Dylan 4">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_5.png.jpg" class="d-block w-100" alt="Dylan 5">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_6.png.jpg" class="d-block w-100" alt="Dylan 6">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_7.png.jpg" class="d-block w-100" alt="Dylan 7">
                    </div>
                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselOverMij" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Vorige</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselOverMij" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Volgende</span>
                </button>
                <br />
            </div>
        </div>

        <div class="AboutMeInfo col-lg-8">
            <div class="AboutMe">
                <h2>Who am I</h2>
                <h6>
                    My name is Dylan ter Bruggen. I study Software Development at ROC van Twente.
                    <br />
                    In my free time, I enjoy gaming — especially strategy, survival, city-builder, and shooter games.
                </h6>
            </div>
            <br />
        </div>


        <div class="container mt-4">
            <div class="row">
                <!-- English Column -->
                <div class="col-md-6 mb-4">
                    <h4 class="text-primary">English</h4>
                    <div class="mb-3">
                        <strong>Curriculum Vitae</strong>
                        <div class="d-flex flex-wrap gap-2 mt-1">
                            <a asp-controller="Documents" asp-action="ViewDocument" asp-route-filename="CV-Dylan-EN.pdf"
                               class="btn btn-outline-primary btn-sm" target="_blank">
                                View CV Online
                            </a>
                            <a asp-controller="Documents" asp-action="Download" asp-route-filename="CV-Dylan-EN.pdf"
                               class="btn btn-outline-secondary btn-sm">
                                Download CV
                            </a>
                        </div>
                    </div>
                    <div class="mb-3">
                        <strong>Cover Letter</strong>
                        <div class="d-flex flex-wrap gap-2 mt-1">
                            <a asp-controller="Documents" asp-action="ViewDocument" asp-route-filename="CoverLetter.pdf"
                               class="btn btn-outline-primary btn-sm" target="_blank">
                                View Cover Letter
                            </a>
                            <a asp-controller="Documents" asp-action="Download" asp-route-filename="CoverLetter.pdf"
                               class="btn btn-outline-secondary btn-sm">
                                Download Cover Letter
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Nederlands Column -->
                <div class="col-md-6 mb-4">
                    <h4 class="text-success">Nederlands</h4>
                    <div class="mb-3">
                        <strong>Curriculum Vitae</strong>
                        <div class="d-flex flex-wrap gap-2 mt-1">
                            <a asp-controller="Documents" asp-action="ViewDocument" asp-route-filename="CV-Dylan-NL.pdf"
                               class="btn btn-outline-primary btn-sm" target="_blank">
                                Bekijk CV Online
                            </a>
                            <a asp-controller="Documents" asp-action="Download" asp-route-filename="CV-Dylan-NL.pdf"
                               class="btn btn-outline-secondary btn-sm">
                                Download CV
                            </a>
                        </div>
                    </div>
                    <div class="mb-3">
                        <strong>Sollicitatiebrief</strong>
                        <div class="d-flex flex-wrap gap-2 mt-1">
                            <a asp-controller="Documents" asp-action="ViewDocument" asp-route-filename="Sollicitatiebrief.pdf"
                               class="btn btn-outline-primary btn-sm" target="_blank">
                                Bekijk Sollicitatiebrief
                            </a>
                            <a asp-controller="Documents" asp-action="Download" asp-route-filename="Sollicitatiebrief.pdf"
                               class="btn btn-outline-secondary btn-sm">
                                Download Sollicitatiebrief
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>