@{
    ViewData["Title"] = "Over mij";
}

<div class="experience-section container ">
    <h1 class="text-center">About Me</h1>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div id="carouselOverMij" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/OverMij/Dylan_1.png.jpg" class="d-block w-100" alt="Dylan 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_2.png.jpg" class="d-block w-100" alt="Dylan 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_3.png.jpg" class="d-block w-100" alt="Dylan 3">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_4.png.jpg" class="d-block w-100" alt="Dylan 4">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_5.png.jpg" class="d-block w-100" alt="Dylan 5">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_6.png.jpg" class="d-block w-100" alt="Dylan 6">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/OverMij/Dylan_7.png.jpg" class="d-block w-100" alt="Dylan 7">
                    </div>
                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselOverMij" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Vorige</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselOverMij" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Volgende</span>
                </button>
                <br />
            </div>
        </div>

        <div class="AboutMeInfo col-lg-8">
            <div class="AboutMe">
                <h2>Who am I</h2>
                <h6>
                    My name is Dylan ter Bruggen. I study Software Development at ROC van Twente.
                    <br />
                    In my free time, I enjoy gaming — especially strategy, survival, city-builder, and shooter games.
                </h6>
            </div>
            <br />
        </div>


        <div class="container my-5">
            <div class="row g-4">
                <!-- English CV -->
                <div class="col-md-6 text-center">
                    <h4 class="mb-3">English CV</h4>
                    <div class="cv-preview shadow rounded overflow-hidden">
                        <embed src="/Documents/CV-Dylan-EN.pdf#page=1&zoom=100"
                               type="application/pdf"
                               class="w-100"
                               style="height: 400px; border: none;" />
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <button class="btn btn-primary"
                                onclick="openPdfModal('/Documents/CV-Dylan-EN.pdf', 'English CV')">
                            View CV Online
                        </button>
                        <a href="/Documents/CV-Dylan-EN.pdf" download class="btn btn-outline-secondary">
                            Download CV
                        </a>
                    </div>
                </div>

                <!-- Dutch CV -->
                <div class="col-md-6 text-center">
                    <h4 class="mb-3">Nederlandse CV</h4>
                    <div class="cv-preview shadow rounded overflow-hidden">
                        <embed src="/Documents/CV-Dylan-NL.pdf#page=1&zoom=100"
                               type="application/pdf"
                               class="w-100"
                               style="height: 400px; border: none;" />
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <button class="btn btn-primary"
                                onclick="openPdfModal('/Documents/CV-Dylan-NL.pdf', 'Nederlandse CV')">
                            Bekijk CV Online
                        </button>
                        <a href="/Documents/CV-Dylan-NL.pdf" download class="btn btn-outline-secondary">
                            Download CV
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="pdfModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content bg-dark text-white">
                    <div class="modal-header">
                        <h5 class="modal-title" id="pdfModalLabel">Document Viewer</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-0">
                        <iframe id="pdfFrame" src="" width="100%" height="600px" style="border:0;"></iframe>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function openPdfModal(url, title) {
                document.getElementById("pdfFrame").src = url;
                document.getElementById("pdfModalLabel").innerText = title;
                new bootstrap.Modal(document.getElementById("pdfModal")).show();
            }
        </script>
    </div>
</div>